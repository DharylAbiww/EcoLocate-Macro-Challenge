<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/silver"
    tools:context=".Home">

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/logo_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:src="@drawable/icon_beranda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_shortcut_1"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="45dp"
        app:backgroundTint="@color/forest_green"
        app:cornerRadius="15dp"
        app:icon="@drawable/recycle"
        app:iconTint="@color/white"
        app:iconSize="35dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_header" />

    <TextView
        android:id="@+id/tv_btn_1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:text="TPS 3R\nTerdekat"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_shortcut_1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_shortcut_2"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:backgroundTint="@color/forest_green"
        app:cornerRadius="15dp"
        app:icon="@drawable/non3r_bin"
        app:iconSize="35dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintLeft_toRightOf="@id/btn_shortcut_1"
        app:layout_constraintTop_toBottomOf="@id/logo_header" />

    <TextView
        android:id="@+id/tv_btn_2"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:text="TPS Non 3R\nTerdekat"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@id/tv_btn_1"
        app:layout_constraintTop_toBottomOf="@id/btn_shortcut_2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_shortcut_3"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:backgroundTint="@color/forest_green"
        app:cornerRadius="15dp"
        app:icon="@drawable/saved_tps"
        app:iconSize="40dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintLeft_toRightOf="@id/btn_shortcut_2"
        app:layout_constraintTop_toBottomOf="@id/logo_header" />

    <TextView
        android:id="@+id/tv_btn_3"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:text="Lokasi TPS\nTersimpan"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@id/tv_btn_2"
        app:layout_constraintTop_toBottomOf="@id/btn_shortcut_3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_shortcut_4"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        app:backgroundTint="@color/forest_green"
        app:cornerRadius="15dp"
        app:icon="@drawable/saved_post"
        app:iconSize="35dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_header" />

    <TextView
        android:id="@+id/tv_btn_4"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:text="Bacaan\nTersimpan"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@id/tv_btn_3"
        app:layout_constraintTop_toBottomOf="@id/btn_shortcut_4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baru dikunjungi"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_bold"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/tv_btn_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:drawableRight="@drawable/next_recent_visit_icon"
        android:drawablePadding="3dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>