<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:strokeColor="@color/figma_grey"
    app:strokeWidth="1dp"
    android:layout_marginBottom="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/iv_tps"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/img_bacaanberanda01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nama_tps"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="TPS Terpadu Kalidoni"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:maxLines="2"
            android:layout_marginStart="10dp"

            app:layout_constraintLeft_toRightOf="@id/iv_tps"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tag_tps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TPS Terpadu"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:padding="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_tag_tps"
            app:layout_constraintTop_toBottomOf="@id/tv_nama_tps"
            app:layout_constraintLeft_toRightOf="@id/iv_tps"/>

        <TextView
            android:id="@+id/tv_alamat_tps"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_tag_tps"
            app:layout_constraintLeft_toRightOf="@id/iv_tps"
            android:text="Jalan Taqwa Mata Merah"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>